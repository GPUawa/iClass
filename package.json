{
    "name": "iclass",
    "version": "0.9.1",
    "description": "一个简单的教室大屏工具",
    "main": "src/main/main.js",
    "scripts": {
        "run": "electron .",
        "build": "electron-builder"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/gpuawa/iclass.git"
    },
    "author": "GPUawa",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/gpuawa/iclass/issues"
    },
    "homepage": "https://github.com/gpuawa/iclass#readme",
    "build": {
        "appId": "gpuawa.iclass",
        "productName": "iClass",
        "asar": false,
        "directories": {
            "output": "dist"
        },
        "win": {
            "icon": "src/assets/img/logo.ico"
        }
    },
    "nsis": {
        "oneClick": false,
        "allowToChangeInstallationDirectory": true,
        "perMachine": false
    },
    "files": [
        "**/*",
        "!node_modules/**/*"
    ],
    "mac": {
        "target": "dmg"
    },
    "win": {
        "target": "nsis"
    },
    "linux": {
        "target": "AppImage"
    },
    "devDependencies": {
        "electron": "22.3.9",
        "electron-builder": "^25.1.8"
    },
    "dependencies": {}
}